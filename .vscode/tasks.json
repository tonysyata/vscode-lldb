{
  "version": "2.0.0",
  "problemMatcher": [],
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "build:debuggee:cpp",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "build:debuggee:rust",
      "problemMatcher": "$rustc",
      "group": "build"
    },
    {
      "type": "shell",
      "label": "cargo build",
      "command": "cargo",
      "args": [
        "build"
      ],
    },
    {
      "type": "shell",
      "command": "sleep 1",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "label": "cargo build",
      "command": "cargo build",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "build codelldb",
      "type": "shell",
      "command": "clear; python ${workspaceFolder}/tools/build_codelldb.py ${workspaceFolder}",
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "cargo check",
      "command": "clear; cargo check",
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "cargo test",
      "command": "cargo",
      "args": [
        "test", "-p", "codelldb"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "cargo expand lldb",
      "command": "cargo expand --manifest-path=adapter2/deps/lldb/Cargo.toml >/tmp/expanded.rs",
    },
    {
      "type": "shell",
      "label": "Start extension host",
      "command": "code --extensionDevelopmentPath=${workspaceRoot}"
    }
  ]
}
